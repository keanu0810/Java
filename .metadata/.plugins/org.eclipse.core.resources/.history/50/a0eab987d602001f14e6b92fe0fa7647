package com.kh.practice.score.model.dao;

import java.io.*;

public class ScoreDAO {
	private final String FILE_PATH = "score.txt";

	public void saveScore(String name, int kor, int eng, int math, int sum, double avg) {
		
		try {
			DataOutputStream dos = new DataOutputStream(new FileOutputStream(FILE_PATH));
			
			dos.writeUTF(name);
			dos.writeInt(kor);;
			dos.writeInt(eng);;
			dos.writeInt(math);;
			dos.writeInt(sum);;
			dos.writeDoublie(avg);
			System.out.println("점수가 성공적으로 저장되었습니다.");
		} catch (FileNotFoundException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		
		
	}
	
	


}
