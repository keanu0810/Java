package sup1.controller;

public class Score1 {
//필드
	private int 국어;
	private int 영어;
	private int 수학;
	private int 총점;
	private int 평균;

//메서드

	//필수생성자
	//메서드
	public Score1(int 국어, int 영어, int 수학, int 총점, int 평균) {
		this.국어 = 국어;
		this.영어 = 영어;
		this.수학 = 수학;
		this.총점 = 총점;
		this.평균 = 평균 ;
	}
	//void 점수
	public void 점수() {
		총점 = 국어 + 영어 + 수학;
		평균 = 총점 / 3.0;
		
		//평균 50점 이상이면 합격
		//삼항연산자로 합격 불합격
		String 결과 = (국어 >= 50, 영어 >= 50, 수학 >= 50, 평균 >= 50) ? "합격" : "불합격";
		//각 점수가 50점 이상 평균 50점 이상
		//출력문으로 국어영어 수학점
		//상항연산자에 대한 결과 출력
	}

	public Score(int 국어, int 영어, int 수학, int 총점, int 평균) {
		super();
		this.국어 = 국어;
		this.영어 = 영어;
		this.수학 = 수학;
		this.총점 = 총점;
		this.평균 = 평균;
	}
}
