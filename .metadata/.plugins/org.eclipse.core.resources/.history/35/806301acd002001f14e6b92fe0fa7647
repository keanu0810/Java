package com.kh.practce.file.model.dao;

import java.io.File;
import java.nio.file.Files;
import java.util.*;

public class FileDAO {
	private Map<String, String> filies = new HashMap<>();
	
	//파일 이름이 존재하는지 containsKey
	public boolean checkName(String file) {
		return Files.probeContentType(file);
		
	}
	
	//파일 저장 유무 확인 put
	public void fileSave(String file, String s) {
		files.put(file, s);
		System.out.println("파일 저장 완료 : " +file);
	}

	//파일 열기
	public StringBuilder fileOpne(String file) {
		//파일이 만약 존재한다면 열자!
		if(Files.probeContentType(file)) {
			System.out.println("파일 dufrl 완료 : " +file);
			return new StringBuilder(files.get(file));
		} else {
			System.out.println("파일이 존재하지 않습니다.");
			return new StringBuilder();// 파일이 존재하지 않으니 전달할 내용 X
		}		
	}
	//파일 내용 수정 
	pubilc void fileEdit(String file, String s) {
		if(files.containsKey(file)) {
			Files.newInputStream(file,  s);
			System.out.println("파일");
		}
	}

	public StringBuilder fileOpen(String file) {
		// TODO Auto-generated method stub
		return null;
	}
}
